{
  "name": "Snippets",
  "required_api_version": "^2.0.0",
  "description": "Copy snippets to your clipboard",
  "developer_name": "Mike Barkmin",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "snippets_keyword",
      "type": "keyword",
      "name": "Snippets",
      "description": "Copy snippets to your clipboard",
      "default_value": "snip"
    },
    {
      "id": "snippets_path",
      "type": "input",
      "name": "Snippets Directory",
      "default_value": "~/snippets"
    },
    {
      "id": "snippets_copy_mode",
      "type": "select",
      "name": "Snippets Copy Mode",
      "default_value": "gtk",
      "options": [
        {
          "value": "gtk",
          "text": "Gtk Mode"
        },
        {
          "value": "xsel",
          "text": "Xsel Mode"
        },
        {
          "value": "wl",
          "text": "Wayland Clipboard Mode"
        }
      ]
    }
  ]
}
